{
  "version": 2,
  "builds": [
    {
      "src": "backend/server.js",
      "use": "@vercel/node"
    },
    {
      "src": "*.html",
      "use": "@vercel/static"
    },
    {
      "src": "data.json",
      "use": "@vercel/static"
    },
    {
      "src": "js/**",
      "use": "@vercel/static"
    },
    {
      "src": "css/**",
      "use": "@vercel/static"
    },
    {
      "src": "img/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    { "src": "/api/register", "dest": "/backend/server.js" },
    { "src": "/api/login", "dest": "/backend/server.js" },
    { "src": "/api/my-orders", "dest": "/backend/server.js" },
    { "src": "/get-snap-token", "dest": "/backend/server.js" },
    { "src": "/payment-notification", "dest": "/backend/server.js" },
    { "src": "/update-order-status", "dest": "/backend/server.js" },
    { "src": "/(.*)", "dest": "/$1" }
  ]
}